{
  "include": ["src/**/*"],
  "compilerOptions": {
    "jsx": "react",
    "skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "paths": {
      "src/*": ["./*"]
    }
  }
}
